
@model IEnumerable<Human_resource_management_System.Models.LichLamViec>

@{
    ViewBag.Title = "Lịch làm việc";
    Layout = "~/Areas/Employee/Views/Shared/_LayoutEmployee.cshtml";

    var employeeName = (ViewBag.EmployeeName as string) ?? User.Identity.Name;
    var employeeId = (ViewBag.EmployeeId as string) ?? "";
    var showDebug = (HttpContext.Current != null && HttpContext.Current.IsDebuggingEnabled)
        && string.Equals(Request.QueryString["debug"], "1", StringComparison.Ordinal);
}

<div class="space-y-6">
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
            <div>
                <h2 class="text-xl font-bold text-gray-800">Lịch làm việc</h2>
                <p class="text-sm text-gray-500 mt-1">
                    Nhân viên: <span class="font-semibold text-gray-700">@employeeName</span>
                    @if (!string.IsNullOrWhiteSpace(employeeId))
                    {
                        <span class="text-gray-400">(</span><span class="font-medium text-gray-600">@employeeId</span><span class="text-gray-400">)</span>
                    }
                </p>
            </div>
            <div class="text-sm text-gray-500">
                Tổng ca: <span class="font-semibold text-gray-700">@(Model?.Count() ?? 0)</span>
            </div>
        </div>

        @if (showDebug)
        {
            <div class="mt-4 rounded-lg border border-amber-200 bg-amber-50 p-4 text-sm text-amber-900">
                <div class="font-semibold mb-1">Debug Schedule</div>
                <div>employeeId: <span class="font-mono">@employeeId</span></div>
                <div>records: <span class="font-mono">@(Model?.Count() ?? 0)</span></div>
                <div class="text-xs text-amber-700 mt-2">Ẩn panel này bằng cách bỏ tham số <span class="font-mono">?debug=1</span>.</div>
            </div>
        }
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-50 bg-gray-50/50 flex items-center justify-between">
            <h3 class="font-semibold text-gray-800 flex items-center gap-2">
                <i class="fa-solid fa-calendar-days text-purple-600"></i>
                Danh sách lịch
            </h3>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="p-6">
                <div class="p-4 rounded-lg border border-gray-100 bg-gray-50 text-gray-600 text-sm">
                    Chưa có lịch làm việc nào được phân công.
                </div>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500  tracking-wider">Ngày</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500  tracking-wider">Ca làm</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500  tracking-wider">Giờ</th>
                            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500  tracking-wider">Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-100">
                        @foreach (var item in Model)
                        {
                            var shiftName = item.CaLamViec?.tenCa ?? "--";
                            var startTime = item.CaLamViec != null ? item.CaLamViec.gioBatDau.ToString(@"hh\:mm") : "--";
                            var endTime = item.CaLamViec != null ? item.CaLamViec.gioKetThuc.ToString(@"hh\:mm") : "--";
                            var note = string.IsNullOrWhiteSpace(item.ghiChu) ? "--" : item.ghiChu;
                            var isToday = item.ngayLamViec.Date == DateTime.Today;

                            <tr class="@(isToday ? "bg-blue-50/40" : "")">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-semibold text-gray-800">@item.ngayLamViec.ToString("dd/MM/yyyy")</div>
                                    <div class="text-xs text-gray-500">@item.ngayLamViec.ToString("dddd", new System.Globalization.CultureInfo("vi-VN"))</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-xs font-semibold bg-purple-50 text-purple-700">
                                        <i class="fa-regular fa-clock"></i>
                                        @shiftName
                                    </span>
                                    @if (item.CaLamViec?.heSoLuong != null)
                                    {
                                        <span class="ml-2 text-xs text-gray-500">HSL: @item.CaLamViec.heSoLuong</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-800 font-medium">@startTime - @endTime</div>
                                    @if (startTime != "--" && endTime != "--" && item.CaLamViec.gioKetThuc < item.CaLamViec.gioBatDau)
                                    {
                                        <div class="text-xs text-gray-500">Ca qua ngày</div>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <div class="text-sm text-gray-700">@note</div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

